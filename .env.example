# Simulverse Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# MongoDB Configuration
# ============================================
MONGODB_URL=mongodb://localhost:27017/
MONGODB_DATABASE=simulverse

# ============================================
# JWT Security
# ============================================
# Generate secret keys with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-change-me
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-here-change-me
ALGORITHM=HS256

# Token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days (60 * 24 * 7)

# ============================================
# Application Settings
# ============================================
# Environment: development, staging, production
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Debug mode (set to False in production)
DEBUG=True

# ============================================
# Optional: Advanced Settings
# ============================================
# CORS Origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Max upload file size (in MB)
# MAX_UPLOAD_SIZE=10

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO
